    "# Part 3 â€” Caesar Cipher (Dictionary Mapping Version)\n",
    "\n",
    "text_raw = input(\"Enter text: \")\n",
    "shift = int(input(\"Enter shift value (integer): \"))\n",
    "mode = input(\"Type 'e' to encrypt or 'd' to decrypt: \").lower()\n",
    "\n",
    "# Convert to uppercase\n",
    "text = text_raw.upper()\n",
    "\n",
    "# Normalize shift to 0-25 range\n",
    "shift_norm = shift % 26\n",
    "\n",
    "# Build alphabet as a list\n",
    "alphabet = list(\"ABCDEFGHIJKLMNOPQRSTUVWXYZ\")\n",
    "\n",
    "# Build shifted alphabet by rotating left by shift_norm\n",
    "# e.g. shift 3: DEFGHIJKLMNOPQRSTUVWXYZABC\n",
    "shifted = alphabet[shift_norm:] + alphabet[:shift_norm]\n",
    "\n",
    "# Build the mapping dictionaries\n",
    "encrypt_map = {}\n",
    "decrypt_map = {}\n",
    "\n",
    "for i in range(26):\n",
    "    encrypt_map[alphabet[i]] = shifted[i]\n",
    "    decrypt_map[shifted[i]] = alphabet[i]\n",
    "\n",
    "# Choose which map to use\n",
    "if mode == \"e\":\n",
    "    active_map = encrypt_map\n",
    "else:\n",
    "    active_map = decrypt_map\n",
    "\n",
    "# Process each character\n",
    "result = \"\"\n",
    "for ch in text:\n",
    "    if ch in alphabet:\n",
    "        result += active_map[ch]\n",
    "    else:\n",
    "        # non-letters stay unchanged\n",
    "        result += ch\n",
    "\n",
    "print(\"Result:\", result)"
