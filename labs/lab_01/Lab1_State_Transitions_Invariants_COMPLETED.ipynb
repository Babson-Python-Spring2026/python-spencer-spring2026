    "# Part 1A â€” Hollow Diamond (Two Loops)\n",
    "\n",
    "height = int(input(\"Enter an odd number for the diamond height: \"))\n",
    "\n",
    "mid = height // 2\n",
    "\n",
    "# Top half (row 0 to mid, inclusive)\n",
    "for row in range(mid + 1):\n",
    "    leading_spaces = mid - row\n",
    "    inner_spaces = 2 * row - 1\n",
    "    \n",
    "    if row == 0:\n",
    "        # tip - just one star\n",
    "        line = \" \" * leading_spaces + \"*\"\n",
    "    else:\n",
    "        # two stars with inner spacing\n",
    "        line = \" \" * leading_spaces + \"*\" + \" \" * inner_spaces + \"*\"\n",
    "    \n",
    "    print(line)\n",
    "\n",
    "# Bottom half (row mid-1 down to 0)\n",
    "for row in range(mid - 1, -1, -1):\n",
    "    leading_spaces = mid - row\n",
    "    inner_spaces = 2 * row - 1\n",
    "    \n",
    "    if row == 0:\n",
    "        line = \" \" * leading_spaces + \"*\"\n",
    "    else:\n",
    "        line = \" \" * leading_spaces + \"*\" + \" \" * inner_spaces + \"*\"\n",
    "    \n",
    "    print(line)"
